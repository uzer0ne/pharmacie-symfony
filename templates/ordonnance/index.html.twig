{% extends 'base.html.twig' %}

{% block title %}Ordonnances - PharmaGest{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('app_home') }}" class="text-decoration-none">
                <i class="bi bi-house-door"></i> Accueil
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="bi bi-file-text"></i> Ordonnances
        </li>
    </ol>
</nav>

<!-- En-tête de page -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 text-primary">
            <i class="bi bi-file-text"></i> Gestion des Ordonnances
        </h1>
        <p class="text-muted mb-0">Consultez et gérez l'ensemble des ordonnances</p>
    </div>
    <div>
        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left"></i> Retour à l'accueil
        </a>
        <a href="{{ path('app_ordonnance_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle Ordonnance
        </a>
    </div>
</div>

<!-- Cartes de statistiques -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Ordonnances
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ ordonnances|length }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-file-text fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tableau des ordonnances -->
<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="bi bi-list-ul"></i> Liste des Ordonnances
        </h5>
    </div>
    <div class="card-body">
        {% if ordonnances|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>#ID</th>
                        <th>Date</th>
                        <th>Durée Traitement</th>
                        <th>Patient</th>
                        <th>Médecin</th>
                        <th>Produits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ordonnance in ordonnances %}
                    <tr>
                        <td>
                            <strong>#{{ ordonnance.id }}</strong>
                        </td>
                        <td>
                            <span class="badge bg-info text-dark">
                                {{ ordonnance.dateOrdonnance ? ordonnance.dateOrdonnance|date('d/m/Y') : 'N/A' }}
                            </span>
                        </td>
                        <td>
                            <span class="fw-bold">{{ ordonnance.dureeTraitement }}</span>
                        </td>
                        <td>
                            {% if ordonnance.patient %}
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person me-2 text-muted"></i>
                                    <div>
                                        <div class="fw-bold">{{ ordonnance.patient.prenomPatient }} {{ ordonnance.patient.nomPatient }}</div>
                                        <small class="text-muted">ID: #{{ ordonnance.patient.idPatient }}</small>
                                    </div>
                                </div>
                            {% else %}
                                <span class="text-muted fst-italic">
                                    <i class="bi bi-exclamation-triangle"></i> Non défini
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            {% if ordonnance.medecin %}
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-heart-pulse me-2 text-muted"></i>
                                    <div>
                                        <div>Dr. {{ ordonnance.medecin.prenomMedecin }} {{ ordonnance.medecin.nomMedecin }}</div>
                                        <small class="text-muted">{{ ordonnance.medecin.contactMedecin }}</small>
                                    </div>
                                </div>
                            {% else %}
                                <span class="text-muted fst-italic">
                                    <i class="bi bi-person-x"></i> Non spécifié
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            {% if ordonnance.produits is defined and ordonnance.produits is not empty %}
                                <div class="produits-list">
                                    {% for produit in ordonnance.produits %}
                                        <span class="badge bg-success mb-1" 
                                            data-bs-toggle="tooltip" 
                                            title="{{ produit.nomProduit }} - {{ produit.dosageProduit }}">
                                            {{ produit.nomProduit }}
                                        </span>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <span class="badge bg-secondary">Aucun produit</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_ordonnance_show', {'id': ordonnance.id}) }}" 
                                   class="btn btn-outline-info" 
                                   title="Voir les détails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_ordonnance_edit', {'id': ordonnance.id}) }}" 
                                   class="btn btn-outline-warning" 
                                   title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" 
                                      action="{{ path('app_ordonnance_delete', {'id': ordonnance.id}) }}" 
                                      class="d-inline"
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ordonnance ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ordonnance.id) }}">
                                    <button class="btn btn-outline-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-5">
            <i class="bi bi-file-text display-1 text-muted"></i>
            <h4 class="text-muted mt-3">Aucune ordonnance enregistrée</h4>
            <p class="text-muted">Commencez par créer votre première ordonnance.</p>
            <a href="{{ path('app_ordonnance_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Créer une Ordonnance
            </a>
        </div>
        {% endif %}
    </div>
</div>

<!-- Boutons d'action -->
<div class="mt-3 d-flex gap-2">
    <a href="{{ path('app_ordonnance_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvelle Ordonnance
    </a>
    <a href="{{ path('app_patient_index') }}" class="btn btn-outline-info">
        <i class="bi bi-people"></i> Gérer les Patients
    </a>
    <a href="{{ path('app_medecin_index') }}" class="btn btn-outline-success">
        <i class="bi bi-heart-pulse"></i> Gérer les Médecins
    </a>
</div>

<!-- Script pour les tooltips -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>

<style>
.produits-list .badge {
    font-size: 0.7rem;
    margin-right: 2px;
    margin-bottom: 2px;
    display: inline-block;
}
.card {
    border: none;
    border-radius: 10px;
}
.table th {
    border-top: none;
    font-weight: 600;
    color: #2c5aa0;
}
.btn-group .btn {
    border-radius: 6px;
    margin-right: 2px;
}
</style>
{% endblock %}