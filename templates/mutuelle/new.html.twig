{% extends 'base.html.twig' %}

{% block title %}Nouvelle Mutuelle - PharmaGest{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('app_home') }}" class="text-decoration-none">
                <i class="bi bi-house-door"></i> Accueil
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('app_mutuelle_index') }}" class="text-decoration-none">
                <i class="bi bi-shield-plus"></i> Mutuelles
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="bi bi-plus-circle"></i> Nouvelle Mutuelle
        </li>
    </ol>
</nav>

<!-- En-tête de page -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 text-info">
            <i class="bi bi-plus-circle"></i> Nouvelle Mutuelle
        </h1>
        <p class="text-muted mb-0">Ajoutez une nouvelle mutuelle partenaire</p>
    </div>
    <div>
        <a href="{{ path('app_mutuelle_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>

<!-- Formulaire -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        {{ include('mutuelle/_form.html.twig') }}
    </div>
</div>
{% endblock %}